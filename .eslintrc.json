{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "ignorePatterns": [
        "dist/**/*"
    ],
    "overrides": [
        {
            "env": {
                "browser": true,
                "node": false
            },
            "files": [
                "src/**/*"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": "warn"
    }
}
